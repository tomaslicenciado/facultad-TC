    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "tp1.App",
            "projectName": "tp1"
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug ANTLR4 Grammar",
            "input": "input/tp1.txt",
            "visualParseTree": true,
            "printParseTree": true,
            "startRule": "si",
            "grammar": "${file}"
        }
    ]
}